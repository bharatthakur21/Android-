<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="1dip" android:color="#ff7aae" />
            <gradient android:angle="-90" android:startColor="#ff7aae" android:endColor="#E800FF"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="1dip" android:color="#ff7aae" />
            <solid android:color="#ff7aae"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="1dip" android:color="#ff7aae" />
            <gradient android:angle="-90" android:startColor="#ffb6c1" android:endColor="#ffb6c1" />
        </shape>
    </item>
</selector>