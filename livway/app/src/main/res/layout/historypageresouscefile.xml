<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/textview_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASHUTOSH SINGH"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:padding="@dimen/_2sdp"/>
        <TextView
            android:id="@+id/textView_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9589128617"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="@dimen/_2sdp"/>
            <TextView
                android:id="@+id/textView_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Madhya Pradesh Bhopal Los Angels India 209911"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:padding="@dimen/_2sdp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_EditAddress"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/btn_corner"
                        android:text="edit address"
                        android:textColor="#FFFF"
                        android:padding="@dimen/_2sdp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="@dimen/_100sdp"
                    android:id="@+id/button_DeleteAddress"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/btndelete"
                    android:text="Delete address"
                    android:textColor="@color/black"
                    android:padding="@dimen/_2sdp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>