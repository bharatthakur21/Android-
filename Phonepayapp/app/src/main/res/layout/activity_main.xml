<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
  <ScrollView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
     >

    <androidx.cardview.widget.CardView
      android:id="@+id/cv_slider"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="20dp"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:layout_marginRight="10dp"
      >
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="150dp"
         />
  </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:id="@+id/cv_recone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="20dp"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:layout_marginRight="10dp"
      android:layout_below="@+id/cv_slider"
      >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="bhaarat"
          android:textSize="50dp"
          android:textColor="@color/black"/>

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recv_one"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          >

      </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:id="@+id/cv_rectwo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="20dp"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:layout_marginRight="10dp"
      android:layout_below="@+id/cv_recone"
      >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recv_two"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          >

      </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:id="@+id/cv_recthree"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="20dp"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:layout_marginRight="10dp"
      android:layout_below="@+id/cv_rectwo"
      >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recv_three"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          >

      </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
  </ScrollView>

<!--//-->
/


</RelativeLayout>